- dataset.dataset_attributes.ordered.each do |attrib|
  tr[id="dataset-attribute-#{attrib.id}"]
    th.attribute-key.attribute-column= attrib.key
    td.attribute-value
      .div style="position: relative"
        == render_attribute_value(attrib)
        - if policy(attrib).edit?
          .btn-toolbar.btn-group-hover.pull-right style="position: absolute; top: 0px; right: 0px;"
            .btn-group
              == link_to edit_dataset_dataset_attribute_path(dataset_id: attrib.dataset_id, id: attrib), remote: true, class: 'btn btn-default btn-xs' do
                span.glyphicon.glyphicon-edit
                | &nbsp;edit
            .btn-group
              == link_to dataset_dataset_attribute_path(dataset_id: attrib.dataset_id, id: attrib),
                method: :delete, remote: true, data: { confirm: 'Are you sure you want to remove this attribute?' }, class: 'btn btn-default btn-xs' do
                span.glyphicon.glyphicon-remove
                | &nbsp;remove

      - if attrib.comment?
        br
        small== attrib.comment
