= form_for(@algorithm) do |f|
  - if @algorithm.errors.any?
    #error_explanation
      h2
        = pluralize(@algorithm.errors.count, "error")
        |  prohibited this algorithm from being saved:
      ul
        - @algorithm.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :name
    br
    = f.text_field :name
  .field
    = f.label :path
    br
    = f.text_field :path
  .actions
    = f.submit
