= form_for(@review_activity) do |f|
  - if @review_activity.errors.any?
    #error_explanation
      h2
        = pluralize(@review_activity.errors.count, "error")
        |  prohibited this review_activity from being saved:
      ul
        - @review_activity.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :user_id
    br
    = f.text_field :user_id
  .field
    = f.label :dataset_id
    br
    = f.number_field :dataset_id
  .field
    = f.label :review
    br
    = f.text_area :review
  .field
    = f.label :rating
    br
    = f.number_field :rating
  .actions
    = f.submit
