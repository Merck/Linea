h1
  | Listing share_activities
table
  thead
    tr
      th
        | Dataset
      th
        | User
      th
        | Comment
      th[colspan="3"]
  tbody
    - @share_activities.each do |share_activity|
      tr
        td
          = share_activity.dataset_id
        td
          = share_activity.user_id
        td
          = share_activity.comment
        td
          = link_to 'Show', share_activity
        td
          = link_to 'Edit', edit_share_activity_path(share_activity)
        td
          = link_to 'Destroy', share_activity, method: :delete, data: { confirm: 'Are you sure?' }
br
= link_to 'New Share activity', new_share_activity_path
