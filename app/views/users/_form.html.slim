= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      h2
        = pluralize(@user.errors.count, "error")
        |  prohibited this user from being saved:
      ul
        - @user.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :username
    br
    = f.text_field :username
  .field
    = f.label :full_name
    br
    = f.text_field :full_name
  .field
    = f.label :password
    br
    = f.password_field :password
  .field
    = f.label :password_confirmation
    br
    = f.password_field :password_confirmation
  .field
    = f.label :subject_area_id
    br
    = f.collection_select :subject_area_id, SubjectArea.all, :id, :name
  .field
    = f.label :is_admin
    br
    = f.check_box :is_admin
  .actions
    = f.submit
