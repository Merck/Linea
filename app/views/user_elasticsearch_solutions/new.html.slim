h1.upload__title
  | New Elasticsearch Solution
= form_for(@user_elasticsearch_solution) do |f|
  - if @user_elasticsearch_solution.errors.any?
    #error_explanation
      h2
        = pluralize(@user_elasticsearch_solution.errors.count, "error")
        |  prohibited this elasticsearch service from being saved:
      ul
        - @user_elasticsearch_solution.errors.full_messages.each do |message|
          li
            = message
  .row
    .col-md-6
      .pad
        .field.form-group.row
          .col-md-4
            = f.label :ip_address, class: 'control-label  control-label--padded'
          .col-md-8
            = f.text_field :ip_address, class: 'form-control', required: true
        .field.form-group.row
          .col-md-4
            = f.label :index_name, class: 'control-label  control-label--padded'
          .col-md-8
            = f.text_field :index_name, class: 'form-control', required: true
        .field.form-group.row
          .col-md-4
            = f.label :host, class: 'control-label  control-label--padded'
          .col-md-8
            = f.text_field :host, class: 'form-control', required: true
        .field.form-group.row
          .col-md-4
            = f.label :port, class: 'control-label  control-label--padded'
          .col-md-8
            = f.number_field :port, class: 'form-control', required: true
        .field.form-group.row
          .col-md-4
            = f.label :Datasets, class: 'control-label  control-label--padded'
            br
          .col-md-8
            = f.select :dataset_ids, dataset_options, {}, multiple: true, class: 'form-control', required: true
        hr
        = render partial: '/transformations/form_scheduling'
  .actions
    = f.submit "Create Elasticsearch Service", class: 'btn btn-primary'
= link_to 'Back', user_solutions_path
