= form_for(@column) do |f|
  - if @column.errors.any?
    #error_explanation
      h2
        = pluralize(@column.errors.count, "error")
        |  prohibited this column from being saved:
      ul
        - @column.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :dataset_id
    br
    = f.text_field :dataset_id
  .field
    = f.label :name
    br
    = f.text_field :name
  .field
    = f.label :description
    br
    = f.text_field :description
  .field
    = f.label :data_type
    br
    = f.text_field :data_type
  .field
    = f.label :business_name
    br
    = f.text_field :business_name
  .actions
    = f.submit
