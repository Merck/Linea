= form_for([@dataset, @dataset_attribute], remote: true, html: {role: :form, 'data-model' => 'dataset_attribute', id: 'dataset-attribute-form'}) do |f|

  .form-group.attrib-key
    = f.label :key, 'Key', class: 'control-label', style: 'padding-right: 5px; display: inline-block'
    a[href="#" id='key-help' data-toggle='tooltip' data-trigger='hover click' data-placement='right' title="Enter the name of the attribute (key) you want to add. For example 'Website'. Start typing to see a list of existing keys"]
      i.glyphicon.glyphicon-question-sign
    = f.text_field :key, class: 'form-control', id: 'attrib-key', autocomplete: 'off'
    span.help-block
  .form-group
    = f.label :value, 'Value', class: 'control-label', style: 'padding-right: 5px; display: inline-block'
    a[href="#" id='key-help' data-toggle='tooltip' data-trigger='hover click' data-placement='right' title="Enter the value for the key."]
      i.glyphicon.glyphicon-question-sign
    = f.text_area :value, rows: 5, class: 'form-control'
    span.help-block
  .form-group
    = f.label :comment, 'Comment', class: 'control-label', style: 'padding-right: 5px; display: inline-block'
    a[href="#" id='key-help' data-toggle='tooltip' data-trigger='hover click' data-placement='right' title="Enter any comment related to this key value for this dataset (optional)."]
      i.glyphicon.glyphicon-question-sign
    = f.text_area :comment, rows: 5, class: 'form-control'
    span.help-block

  .actions
    .btn-toolbar.pull-right
      .btn-group
        = f.submit add_or_update(@dataset_attribute), class: 'btn btn-primary'
      .btn-group
        button.btn.btn-default(type="button" data-dismiss="modal") Cancel
